<h1 class="text-center">Munkaidő bejelentő</h1>

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Bentlévő alkalmazottak</h1>
</div>

<table class="table table-striped table-hover" id="errorTable">
    <thead>
        <tr>
            <th>Azonosító</th>
            <th>Név</th>
            <th>Bejelentkezett</th>
        </tr>   
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{azonosito}}</td>
            <!--td><span class="label label-{{statusClass}}">{{statusText}}</span></td-->
            <td>{{forename}} {{surname}}</td>
            <td>{{dateFormat arrival}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>